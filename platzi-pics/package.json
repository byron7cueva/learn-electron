{
  "name": "platzi-pics",
  "version": "1.0.0",
  "description": "New Electron app",
  "main": "./dist/main.js",
  "scripts": {
    "dev:electron": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
    "dev:app": "NODE_ENV=development webpack-dev-server --config webpack.app.config.js --mode development",
    "build:electron": "NODE_ENV=production webpack --config webpack.electron.config.js --mode production",
    "build:app": "NODE_ENV=production webpack --config webpack.app.config.js --mode production",
    "build": "npm run build:electron && npm run build:app",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "elisealcala",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.5.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-unicorn": "^22.0.0",
    "exports-loader": "^1.1.0",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.4.1",
    "style-loader": "^1.2.1",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@types/node": "^14.11.1",
    "basic-ftp": "^4.6.2",
    "electron-settings": "^4.0.2",
    "filesize": "^6.1.0",
    "fs.extra": "^1.3.2",
    "is-image": "^3.0.0",
    "photonkit": "^0.1.2"
  },
  "build": {
    "appId": "com.byron7cueva.platzipics",
    "productName": "Platzipics",
    "files": [
      "dist/",
      "node_modules/",
      "package.json",
      "resources/"
    ],
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "linux": {
      "icon": "icon.png",
      "category": "Office",
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
